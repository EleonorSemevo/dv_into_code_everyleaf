<h1>Admin page</h1>

<div class="row">
	<%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary left-marge', style: "color: white;" %>

</div>
<table class="table">
  <thead>
    <tr>
      <th  scope="col">Name</th>
      <th  scope="col">Email</th>
      <th scope="col">Admin</th>
      <th scope="col">Tasks count</th>
      <!--<th colspan="3"></th>-->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="user_row"><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.admin %>
          <h5> <span class="badge  bg-secondary">Admin</span></h5>
          <% end%>
        </td>
        <td><%= user.tasks.count %> </td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'destroy', ([:admin, user]),  method: :delete %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= paginate @users %>
